%p
  %a{ href: magazines_path } ⏫
%h1= @magazine.title

%div
  = button_to '↪️', magazines_import_path(@magazine), method: :put
  = button_to '❌', magazine_path(@magazine), method: :delete

%ul
  - @magazine.episodes.each do |episode|
    %li
      - if episode.author.present?
        = link_to episode.author, episodes_author_index_path(name: episode.author)
      = link_to episode.title, episode_path(episode)
